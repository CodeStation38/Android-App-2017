<script type="text/javascript">
    function blinker() {
        $('.blink_me').fadeOut(500);
        $('.blink_me').fadeIn(500);
    }
    setInterval(blinker, 1000);
    jQuery(function ($) {
        //$('.table').footable();
        $('.table').footable(
            //{
            //    "paging": {
            //        "size":2
            //    }
            //}
            );
    });

    $("tr").click(function () {
        $(this).addClass("selected").siblings().removeClass("selected");
    });

    var table = $('#UsuarioWebGrid').dataTable({
        "paging": false,
        "ordering": false,
        "info": false,
        "searching": false
    });

    $(function () { 

        $("#UsuarioWebGrid .details").click(function () {
            //var loading2 = $(".loading");
            //ShowProgress();
            $('#spinner').show();

            var id = $(this).closest("tr").find("td").eq(0).html();
            //alert('UsuarioWebID en tr td eq(0): ' + id);

            $.ajax({
                type: "POST",
                url: "/UsuarioSVPWeb/Editar",
                data: '{id: "' + id + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $('#dialog2').html(response);
                    $('#dialog2').dialog('open');
                    $('#spinner').hide();
                    //loading.hide();
                    //$("#progressbar").hide();

                },
                failure: function (response) {
                    //loading.hide();
                    //$('#spinner').hide();
                    alert('Error al editar usuario: ' + response.responseText);

                },
                error: function (response) {
                    //loading.hide();
                    $('#spinner').hide();
                    alert('Error inesperado: ' + response.responseText);
                }
            });
        });
    });

    $("#dialog2").dialog({
        autoOpen: false,
        modal: true,
        width: 1100,
        height: 600,
        title: "Edicion de Usuario Web",
        draggable: false,
        resizable: false,
        close: function () {
            window.location.reload();
            $("#dialog2").dialog('close');
        },
    });


    $("#dialog3").dialog({
        autoOpen: false,
        modal: true,
        width: 1100,
        height: 400,
        title: "Creacion de Usuario Web",
        draggable: false,
        resizable: false
    });


    function crearNuevoUWeb()
    {

        $('#spinner').show();

        $.ajax({
            type: "POST",
            url: "/UsuarioSVPWeb/Create",
            //data: '{id: "' + id + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (response) {
                $('#dialog3').html(response);
                $('#dialog3').dialog('open');
                $('#spinner').hide();
                //loading.hide();
                //$("#progressbar").hide();

            },
            failure: function (response) {
                //loading.hide();
                //$('#spinner').hide();
                alert('Ocurrio un error al crear usuario web: ' + response.responseText);

            },
            error: function (response) {
                //loading.hide();
                $('#spinner').hide();
                alert('Ocurrio un error inesperado: ' + response.responseText);
            }
        });
    }
    </script>
